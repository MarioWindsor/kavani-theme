<style>

.contact-section {
	position: relative;
	z-index: 1;
}

.contact-section .title-col {
	position: relative;
	z-index: 5;
}

.contact-section .form-col {
	position: relative;
	z-index: 1;
}

.contact-section .form-col .contact-form {
	position: relative;
	z-index: 5;
}

.contact-section .form-col:before {
	content: '';
	display: block;
	position: absolute;
	z-index: 1;
	top: 0;
	left: 0;
	right: var(--space-200);
	bottom: var(--space-200);
	box-shadow: 0 0 0 var(--space-min) var(--orange);
	transform: translate(calc(var(--space-75)*-1), calc(var(--space-75)*-1));
	border-radius: var(--space-min);
}

@media( min-width: 640px )  {
	.contact-section .form-col:before {
		transform: translate(calc(var(--space-150)*-1), calc(var(--space-75)*-1));
	}

	.contact-section .form-col:after {
		content: '';
		display: block;
		position: absolute;
		z-index: 1;
		top: 0;
		left: calc(var(--space-200)*5);
		right: var(--space-200);
		bottom: 0;
		background-color: rgba(var(---orange), 0.3);
		transform: translate(calc(var(--space-100)*6), calc(var(--space-100)*3));
		border-radius: var(--space-min);
		background-image: url('{{ 'floral-bg-01.png' | asset_url }}'); background-position: bottom center; background-size: cover; background-repeat: no-repeat; background-attachment: fixed;
	}
}
@media( min-width: 1040px ) {
	.contact-section {
/*		padding-top: var(--space-200);*/
	}

	.contact-section .title-col {
		position: absolute;
		width: auto;
		top: calc(var(--space-100)*-0.5);
		left: calc(var(--space-100)*-2.75);
		text-align: right;
		transform: rotate(-90deg) translate(-100%, 0);
		transform-origin: top left;
	}

	.contact-section .title-col .title .h1 {
		font-size: var(--h2);
	}

	.contact-section .title-col .title .label {
		font-size: var(--h6);
	}

	.contact-section .form-col:before {
		transform: translate(calc(var(--space-100)*-3), calc(var(--space-100)*-1.5));
	}

	.contact-section .form-col:after {
		left: 0;
		transform: translate(calc(var(--space-100)*12), calc(var(--space-100)*3));
	}
}
@media( min-width: 1480px ) {
	.contact-section .form-col:before {
		transform: translate(calc(var(--space-100)*-3.5), calc(var(--space-100)*-1.5));
	}

	.contact-section .form-col:after {
		transform: translate(calc(var(--space-100)*14), calc(var(--space-100)*3));
	}
}

</style>


<!-- Contact Section -->
<section id="contact-section" class="contact-section space-200-top-bottom">
	<!-- <div class="container fade-up-animation"> -->
	<div class="container">
		<div class="row">
			<div class="title-col columns small-12 medium-10 medium-offset-1">
				<div class="title space-25">
					<div class="h1 text-uppercase line-height-one space-25-left-right space-25-bottom fill-light">Get in Touch</div>
