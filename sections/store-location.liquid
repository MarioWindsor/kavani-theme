<!-- Location Section -->
<section id="location-section" class="location-section space-250-top-bottom">
	<div class="container">
		<div class="row">
			<div class="columns small-12 text-center">
				<div class="h5 strong text-uppercase space-100-bottom">Boutique Locations</div>
			</div>
		</div>
		<div class="locations">
			{% for block in section.blocks %}
			<div class="location radius-25 no-overflow no-whitespace">
				<div class="bg-video-embed">
					<iframe class="" src="https://www.youtube-nocookie.com/embed/dDlTUTgOYOw?playlist=dDlTUTgOYOw&html5=1&color=white&disablekb=0&fs=0&autoplay=1&loop=1&modestbranding=1&playsinline=1&rel=0&showinfo=1&enablejsapi=1&mute=1&controls=0" title="YouTube video player" frameborder="0" allow="autoplay; accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
				</div>
				<div class="location-actions space-25">
					<div class="title h5 strong line-height-small text-white text-uppercase text-center">{{ block.settings.city }}</div>
					<div class="description small strong text-white text-uppercase text-center ">{{ block.settings.state }}</div>
					<div class="row space-25-top">
						<div class="columns small-6 space-25">
							<a href="{{ block.settings.maps_url }}" class="maps button block text-white box-border-white">Google Maps</a>
						</div>
						<div class="columns small-6 space-25">							
							<a href="{{ block.settings.page_url }}" class="page button block text-white box-border-white">Learn More</a>
						</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</section>
<!-- END: Location Section -->

{% schema %}
{
	"name": "Store Locations",
	"blocks": [
		{
			"type": "location",
			"name": "Location",
			"settings": [
				{
					"type": "text",
					"id": "city",
					"label": "Location Title",
					"default": "Bangalore"
				},
				{
					"type": "text",
					"id": "state",
					"label": "Location Description",
					"default": "Karnataka, India"
				},
				{
					"type": "url",
					"id": "maps_url",
					"label": "Google Maps URL",
					"info": "Link to your Google Maps location."
				},
				{
					"type": "url",
					"id": "page_url",
					"label": "Learn More Page URL",
					"info": "Link to a page about this specific location (e.g., a Contact Us page or custom page)."
				}
			]
		}
	],
	"presets": [
		{
			"name": "Store Locations",
			"blocks": [
				{
					"type": "location"
				},
				{
					"type": "location"
				}
			]
		}
	]
}
{% endschema %}